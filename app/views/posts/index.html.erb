
<p style="color: green"><%= notice %></p>

<section class="jumbotron text-center p-5">
    <div class="container p-5">
        <h1 class="jumbotron-heading">BLOG</h1>
        <p class="lead text-muted">Welcome to my first ruby on rails blog web application.</p>
        <p>
          <a href="#" class="btn btn-primary my-2">Sign Up</a>
          <a href="#" class="btn btn-secondary my-2">Sign In</a>
        </p>
    </div>
</section>


<div class="container">
    <% if @posts.count == 0%>
    <h1>No Posts Yet!</h1>
    <% else %>
        <h1 class="text-center pb-2">All Posts</h1>
        <div id="posts">
            <% @posts.each do |post| %>
                <p><strong>Title :</strong> <%= post.title%> </p>
                <p><strong>Content :</strong> <%= post.content%> </p>
            <p>
                <%= link_to "Show this Post", post %>
            </p>
            <% end %>
        </div>
    <% end %>
</div>



<h1>All Posts</h1>

<p style="color: green"><%= notice %></p>

<div id="posts">
  <% @posts.each do |post| %>
    <p><strong>Title :</strong> <%= post.title%> </p>
    <p><strong>Content :</strong> <%= post.content%> </p>
    <p>
      <%= link_to "Show this Post", post %>
    </p>
  <% end %>
</div>
